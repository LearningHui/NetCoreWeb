@model Dish
@{
    ViewBag.Title = "Edit Dish";
}
<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="DishID" />
    <input type="hidden" asp-for="ImageName" />
    <div class="form-group">
        <label>Image</label>
        <input type="file" name="files" class="file" style="margin:0px 0px 10px 0px" multiple />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Category"></label>
        <div><span asp-validation-for="Category" class="text-danger"></span></div>
        <input asp-for="Category" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Remark"></label>
        <div><span asp-validation-for="Remark" class="text-danger"></span></div>
        <input asp-for="Remark" class="form-control" />
    </div>
    <div class="checkbox">
        <label>
            <input asp-for="Disabled" /> 删除此菜
        </label>
    </div>
    <div class="form-group">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</form> 