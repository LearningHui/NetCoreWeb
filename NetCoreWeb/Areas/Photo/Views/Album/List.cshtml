                            <a href="/circleci/" onclick="_hmt.push(['_trackEvent', 'titlelink', 'click', 'CircleCI'])" target="_blank">CircleCI</a>
                        </h2>
                        <div class="post-featured-image">
                            <a class="thumbnail" href="/circleci/" onclick="_hmt.push(['_trackEvent', 'imagelink', 'click', 'CircleCI'])" target="_blank">
                                <img src="http://image.youzhan.org/a/e1/e235a09426f32cc5b31a0a7ec3109.png!thumb" width="700" height="438" alt="CircleCI" onload="imgLoaded(this)">
                            </a>
                        </div>
                        <div class="post-content">
                            <p>
                                <a href="https://circleci.com/">CircleCI</a>
                            </p>
                        </div>
                    </article>
                </div>*@

        </div>
        <nav page-model="@Model.PagingInfo"
             page-action="List"
             page-url-category="@Model.CurrentCategory"
             page-pre-class="newer-posts"
             page-next-class="older-posts"
             class="pagination">
        </nav>
    </div>
</main>






