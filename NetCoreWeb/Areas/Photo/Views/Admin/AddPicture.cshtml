@model Picture
@{
    ViewBag.Title = "Edit Picture";
}
<div class="row">
    <div style="margin-left:100px" class="col-xs-12 col-sm-6">
        <form asp-action="CreatePicture" asp-route-albumId=@ViewData["AlbumId"] method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="PictureID" />
            <div class="form-group">
                <label>Image</label>
                <input type="file" name="files" class="file" style="margin:0px 0px 10px 0px" multiple />
            </div>
            <div class="form-group">
                <label asp-for="Info"></label>
                <div><span asp-validation-for="Info" class="text-danger"></span></div>
                <input asp-for="Info" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Remark"></label>
                <div><span asp-validation-for="Remark" class="text-danger"></span></div>
                <textarea asp-for="Remark" class="form-control"></textarea>
            </div>
            <div class="checkbox">
                <label>
                    <input asp-for="Disabled" />禁用此图片
                </label>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Save</button>
                <a asp-action="Index" class="btn btn-default">Cancel</a>
            </div>
        </form>


    </div>    
</div>

