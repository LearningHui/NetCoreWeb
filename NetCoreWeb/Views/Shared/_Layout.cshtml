@inject Microsoft.ApplicationInsights.AspNetCore.JavaScriptSnippet JavaScriptSnippet
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SuperHui</title>
    <meta name="description" content="个人站点，仅用于个人展示及交流" />
    <meta name="HandheldFriendly" content="True" />
    <meta name="MobileOptimized" content="320" />
    <style>
        .input-validation-error {
            border-color: red;
            background-color: #fee;
        }
    </style>    
    <environment names="Development">
        <link rel="stylesheet" href="~/css/bootstrap.css">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        @*<link rel="stylesheet" type="text/css" href="http://expo.bootcss.com/assets/css/site.min.css?v=66ea36ef3f" />*@
    </environment>     
    @Html.Raw(JavaScriptSnippet.FullScript)

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//cdn.bootcss.com/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//cdn.bootcss.com/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->

    <script>
        function imgLoaded(img) {
            var imgWrapper = img.parentNode;
            imgWrapper.className += imgWrapper.className ? ' loaded' : 'loaded';
        }
    </script>
</head>
<body class="home-template">
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">SuperHui</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">主页</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About">关于</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact">联系我</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="body-content container">
        @RenderBody()
        <hr />        
    </div>
    <div class="submit-site">
        <div class="container">
            <div class="submit">
                <p class="text-center">如果你有什么想对我说的<a asp-controller="Comment" asp-action="Create" asp-route-area="">请给我留言</a></p>
                <p class="text-center">感谢您的访问！</p>
            </div>
        </div>
    </div>

    <footer class="main-footer">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    <div class="widget">
                        <h4 class="title">联系我</h4>
                        <address>
                            <strong>邮箱:</strong> <a href="mailto:threshold2015@outlook.com">threshold2015@outlook.com</a><br />
                            <strong>微信:</strong> <a href="">phzou204</a><br />
                            <strong>留言给我：</strong><a asp-action="Create" asp-controller="Comment">转到留言板</a>
                            @*<strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>*@
                        </address>
