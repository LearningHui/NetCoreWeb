        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script asp-src-include="lib/jquery-validation/**/jquery.validate.js"></script>
        <script asp-src-include="lib/jquery-validation-unobtrusive/**/*.js" asp-src-exclude="**.min.js"></script> 
